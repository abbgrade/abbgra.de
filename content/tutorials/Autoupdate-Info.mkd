## install and configure cron-apt

	sudo apt-get install cron-apt
	sudo nano /etc/cron-apt/config
	
## configure notification
	
	MAILON="always"

## configure cron activation

	sudo ln -s /usr/sbin/cron-apt /etc/cron.daily/cron-apt
